// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

  trees     Tree[]   @relation("UserTrees")
  nodes     Node[]   @relation("UserNodes")
}

model Tree {
  id          Int      @id @default(autoincrement())
  startNumber Float
  createdAt   DateTime @default(now())
  createdById Int
  createdBy   User     @relation(fields: [createdById], references: [id], name: "UserTrees")

  nodes       Node[]   @relation("TreeNodes")
}

model Node {
  id          Int      @id @default(autoincrement())
  treeId      Int
  parentId    Int?     
  operation   String?  
  rightValue  Float?   
  result      Float
  createdAt   DateTime @default(now())
  createdById Int
  createdBy   User     @relation(fields: [createdById], references: [id], name: "UserNodes")
  tree        Tree     @relation(fields: [treeId], references: [id], name: "TreeNodes")

  parent      Node?    @relation("NodeToParent", fields: [parentId], references: [id])
  children    Node[]   @relation("NodeToParent")
}
